@model RoutingDemo.Models.ViewModel.OrderDetailsVM;

<form asp-controller="OrderItems" asp-action="AddOrderItem" method="post" class="container mt-4 shadow pb-5 pt-5" style="width:500px;">
    <div class="mt-3">
        <input type="hidden" asp-for="OrderId"/>
        <label asp-for="ProductList" class="col-form-label"></label>
        @{
            SelectList selList = new SelectList(Model.ProductList, "Id", "Name");
        }
        <select asp-for="SelectedProductId" asp-items="@selList" class="form-control">
            <option value="">-- Select Product --</option>
        </select>
        <div>
            <span asp-validation-for="Quantity" class="text-danger text-sm-start"></span>
        </div>

       
    </div>
    <div class="mt-3">
        <label asp-for="Quantity" class="col-form-label"></label>
        <input asp-for="Quantity" class="form-control" type="number"/>
        <div>
            <span asp-validation-for="Quantity" class="text-danger text-sm-start"></span>
        </div>
    </div>
    <div class="mt-3">
        <label asp-for="Rate" class="col-form-label"></label>
        <input asp-for="Rate" class="form-control" type="number"/>
        <div>
            <span asp-validation-for="Rate" class="text-danger text-sm-start"></span>
        </div>
    </div>

    <hr />
    <input type="submit" value="Create" class="btn btn-primary mt-3" />
</form>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
