@model RoutingDemo.Models.ViewModel.LoginViewModel;


<form asp-controller="User" asp-action="Login" method="post" class="container mt-4 shadow pb-5 pt-5" style="width:500px;">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="mt-3">
        <label asp-for="UserName" class="col-form-label"></label>
        <input asp-for="UserName" class="form-control" />
        <div>
            <span asp-validation-for="UserName" class="text-danger text-sm-start"></span>
        </div>
    </div>
    <div class="mt-3">
        <label asp-for="Password" class="col-form-label"></label>
        <input asp-for="Password" class="form-control" />
        <div>
            <span asp-validation-for="Password" class="text-danger text-sm-start"></span>
        </div>
    </div>
    <div class="mt-3 form-check">
      <input asp-for="RememberMe" class="form-check-input" type="checkbox" />
      <label asp-for="RememberMe" class="form-check-label"></label>
    </div>
    <hr />
    <input type="submit" value="Login" class="btn btn-primary mt-3" />
    <div class="mt-3">
        <a asp-action="Register">Register a new user</a>
        <a asp-action="ForgotPassword">Forgot Your Password?</a>
    </div>
</form>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
