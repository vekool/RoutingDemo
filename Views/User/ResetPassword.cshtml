@model RoutingDemo.Models.ViewModel.ResetPasswordVM;

<form asp-controller="User" asp-action="ResetPasswordConfirmation" method="post" class="container mt-4 shadow pb-5 pt-5" style="width:500px;">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="mt-3">
        <label asp-for="Email" class="col-form-label"></label>
        <input asp-for="Email" class="form-control" disabled />
    </div>

    <input asp-for="Token" type="hidden" />
    <div class="mt-3">
        <label asp-for="Password" class="col-form-label"></label>
        <input asp-for="Password" class="form-control" type="password" />
        <div>
            <span asp-validation-for="Password" class="text-danger text-sm-start"></span>
        </div>
    </div>
    <div class="mt-3">
        <label asp-for="ComparePassword" class="col-form-label"></label>
        <input asp-for="ComparePassword" class="form-control" type="password" />
        <div>
            <span asp-validation-for="ComparePassword" class="text-danger text-sm-start"></span>
        </div>
    </div>
    
    <hr />
    <input type="submit" value="Change Password" class="btn btn-primary mt-3" />
</form>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>